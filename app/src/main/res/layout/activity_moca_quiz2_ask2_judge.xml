<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ncyu.login.moca_quiz2_ask2_judge"
    android:orientation="vertical"
    android:background="@color/skyblue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"/>

            <ImageView
                android:id="@+id/quiz2_ask2_answer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:src="@drawable/quiz2_ask2_clock"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:gravity="center"
                android:text="@string/moca_quiz2_judge"
                android:textSize="25dp"
                android:textColor="@color/SlateGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="0.35"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="形狀 數字與指針各是否正確\n若正確請勾選"
                    android:textSize="25dp"
                    android:textColor="@color/SlateGray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/quiz2_ask2_answer1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:text="形狀"
                        android:textSize="30dp"
                        android:textColor="@color/black"/>

                    <CheckBox
                        android:id="@+id/quiz2_ask2_answer2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:text="數字"
                        android:textSize="30dp"
                        android:textColor="@color/black"/>

                    <CheckBox
                        android:id="@+id/quiz2_ask2_answer3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:text="指針"
                        android:textSize="30dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>

    <Button
        android:id="@+id/moca_q2a2j_next"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_margin="5dp"
        android:onClick="onClick2"
        android:text="下一題"
        android:textSize="25dp" />

</LinearLayout>
