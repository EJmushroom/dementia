<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="150dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/skyblue">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="patient_name"
            android:id="@+id/patient_nameTxt"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="family_name"
            android:id="@+id/family_nameTxt"
            android:padding="10dp"
            android:layout_below="@+id/patient_nameTxt"
            android:layout_toLeftOf="@+id/patient_numberTxt"
            android:layout_toStartOf="@+id/patient_numberTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="application_time"
            android:id="@+id/application_timeTxt"
            android:padding="10dp"
            android:layout_below="@+id/family_nameTxt"
            android:layout_toRightOf="@+id/textView17"
            android:layout_toEndOf="@+id/textView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="家屬："
            android:id="@+id/textView16"
            android:layout_alignBottom="@+id/family_nameTxt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView17"
            android:text="申請時間："
            android:layout_alignBottom="@+id/application_timeTxt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="編號："
            android:id="@+id/textView22"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/patient_nameTxt"
            android:layout_toEndOf="@+id/patient_nameTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="patient_number"
            android:id="@+id/patient_numberTxt"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView22"
            android:layout_toEndOf="@+id/textView22" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/btn_link_status"
            android:layout_above="@+id/textView17"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>