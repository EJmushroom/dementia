<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ncyu.login.moca_quiz4_ask2"
    android:orientation="vertical"
    android:background="@color/skyblue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/quiz4_word1"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="?attr/colorButtonNormal"
                android:onClick="onClick2"
                android:textSize="40dp" />

            <Button
                android:id="@+id/quiz4_word2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="?attr/colorButtonNormal"
                android:onClick="onClick2"
                android:textSize="40dp" />

            <Button
                android:id="@+id/quiz4_word3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:background="?attr/colorButtonNormal"
                android:onClick="onClick2"
                android:textSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/quiz4_word4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="?attr/colorButtonNormal"
                android:onClick="onClick2"
                android:textSize="40dp" />

            <Button
                android:id="@+id/quiz4_word5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="?attr/colorButtonNormal"
                android:onClick="onClick2"
                android:textSize="40dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="請監考者在受測者聽到五樣東西並進行第一次回答後，點選正確回答的東西"
            android:textSize="20dp"
            android:textColor="@color/SlateGray"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="當受試者回答結束時，請把五個詞語重讀一次，接著告訴受測者："
                android:textSize="20dp"
                android:textColor="@color/SlateGray"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="我會把這些詞語再讀一次\n請努力把它們記住說給我聽\n越多越好 包括你在第一次說過的字"
                android:textSize="27dp"
                android:textColor="@color/SlateGray"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="請點選第二次測試(你可以再次點第一次測試修改答案)"
                android:textSize="20dp"
                android:textColor="@color/SlateGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/quiz4_first"
                    android:layout_width="0dp"
                    android:onClick="onClick2"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="第一次嘗試"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/quiz4_second"
                    android:layout_width="0dp"
                    android:onClick="onClick2"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:text="第二次嘗試"
                    android:textSize="20dp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="嘗試結束後，請告訴受測者:"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="我會在整個測試快結束時，讓你把這些詞語再回憶一次。"
                android:textSize="25dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/moca_q4a2_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="下一題"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
