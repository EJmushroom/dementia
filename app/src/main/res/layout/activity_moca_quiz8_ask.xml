<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ncyu.login.moca_quiz8_ask"
    android:orientation="vertical"
    android:background="@color/skyblue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="指導語"
                android:textSize="20dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="我之前讀了一些詞語給你聽 我請你記住它們\n現在請你講出你記得的那些詞語"
                android:textSize="23dp"
                android:textColor="@color/SlateGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/quiz8_word1"
                        style="@style/Widget.AppCompat.Button"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="?attr/colorButtonNormal"
                        android:onClick="onClick2"
                        android:textSize="40dp" />

                    <Button
                        android:id="@+id/quiz8_word2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="?attr/colorButtonNormal"
                        android:onClick="onClick2"
                        android:textSize="40dp" />

                    <Button
                        android:id="@+id/quiz8_word3"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="?attr/colorButtonNormal"
                        android:onClick="onClick2"
                        android:textSize="40dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/quiz8_word4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="?attr/colorButtonNormal"
                        android:onClick="onClick2"
                        android:textSize="40dp" />

                    <Button
                        android:id="@+id/quiz8_word5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:background="?attr/colorButtonNormal"
                        android:onClick="onClick2"
                        android:textSize="40dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="在沒有提示的情況下作答正確時 點選該詞語"
                    android:textSize="20dp"
                    android:textColor="@color/SlateGray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="點選以下詞語可獲得該詞語的類別提示或選擇性提示 運用提示幫助受測者回想 但不可得分"
                    android:textSize="20dp"
                    android:textColor="@color/SlateGray"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <Button
                            android:onClick="onClick3"
                            android:id="@+id/quiz8_clue1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="提示1"
                            android:textSize="25dp" />

                        <Button
                            android:onClick="onClick3"
                            android:id="@+id/quiz8_clue2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="提示2"
                            android:textSize="25dp" />

                        <Button
                            android:onClick="onClick3"
                            android:id="@+id/quiz8_clue3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="提示3"
                            android:textSize="25dp" />

                        <Button
                            android:onClick="onClick3"
                            android:id="@+id/quiz8_clue4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="提示4"
                            android:textSize="25dp" />

                        <Button
                            android:onClick="onClick3"
                            android:id="@+id/quiz8_clue5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="提示5"
                            android:textSize="25dp" />
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/quiz8_showClue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="類別提示"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/quiz8_getclue1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="提示一"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="25dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="選擇性提示"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/quiz8_getclue2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="提示二"
                        android:textSize="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/moca_q8a_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="下一題"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
