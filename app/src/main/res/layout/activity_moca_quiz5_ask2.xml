<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ncyu.login.moca_quiz5_ask2"
    android:orientation="vertical"
    android:background="@color/skyblue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="第四題"
                android:textSize="20dp"
                android:textColor="@color/red"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="請直接詢問受試者以下的題目 並對照答案點選是非來紀錄是否作答正確"
                android:textSize="20dp"
                android:textColor="@color/SlateGray"/>

            <TextView
                android:id="@+id/quiz5_ask2_quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="100減掉7等於多少?"
                android:textSize="30dp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="點選答案按鈕表示作答正確"
                    android:textSize="20dp"
                    android:textColor="@color/SlateGray"/>

                <Button
                    android:id="@+id/quiz5_ask2_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:enabled="true"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="93"
                    android:textSize="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/quiz4_notice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="若答案錯誤,請於下方填寫受試者的答案"
                    android:textSize="20dp"
                    android:textColor="@color/SlateGray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:onClick="onClick"
                            android:inputType="number"
                            android:id="@+id/wrong_answer"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:maxLength="10"
                            android:textAlignment="center"
                            android:textSize="30dp" />

                        <Button
                            android:id="@+id/wrong_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="true"
                            android:onClick="onClick"
                            android:text="提交"
                            android:textSize="30dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/output"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text=""
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/moca_q5a2_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onClick2"
            android:text="下一題"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
