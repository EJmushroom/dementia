<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/skyblue">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_patient_name"
            android:layout_gravity="center_horizontal"
            android:hint="請輸入病患姓名"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/SlateGray"/>


    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.01"
        android:id="@+id/rg_patient_gender"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="請選擇病患性別："
            android:id="@+id/textView20"
            android:textColor="@color/black"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:id="@+id/rbtn_patient_boy"
            android:layout_gravity="right"
            android:checked="false"
            android:textColor="@color/SlateGray"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:id="@+id/rbtn_patient_girl"
            android:checked="false"
            android:textColor="@color/SlateGray"/>

    </RadioGroup>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:id="@+id/rg_patient_blood"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="請選擇病患血型："
                android:id="@+id/textView21"
                android:textColor="@color/black"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:id="@+id/rbtn_A"
                android:layout_gravity="right"
                android:checked="false"
                android:textColor="@color/SlateGray"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:id="@+id/rbtn_B"
                android:checked="false"
                android:textColor="@color/SlateGray"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AB"
                android:id="@+id/rbtn_AB"
                android:checked="false"
                android:textColor="@color/SlateGray"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:id="@+id/rbtn_O"
                android:checked="false"
                android:textColor="@color/SlateGray"/>


    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="請選擇病患生日 "
            android:textColor="@color/black"/>
        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:calendarTextColor="@color/black"/>
    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_name"
        android:layout_gravity="center_horizontal"
        android:hint="請輸入家屬姓名"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/SlateGray"/>

    <RadioGroup
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.01"
        android:id="@+id/rg_gender"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="請選擇家屬性別："
            android:id="@+id/textView19"
            android:textColor="@color/black"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:id="@+id/rbtn_boy"
            android:layout_gravity="right"
            android:checked="false"
            android:textColor="@color/SlateGray"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:id="@+id/rbtn_girl"
            android:checked="false"
            android:textColor="@color/SlateGray"/>

    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:id="@+id/et_account"
        android:layout_gravity="center_horizontal"
        android:hint="請輸入帳號"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/SlateGray"
        android:singleLine="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:hint="請輸入密碼"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/SlateGray"
        android:singleLine="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_rpassword"
        android:layout_gravity="center_horizontal"
        android:hint="請再次輸入密碼"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/SlateGray"
        android:singleLine="true"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="確定註冊"
        android:id="@+id/btn_rregister"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>
</LinearLayout>
